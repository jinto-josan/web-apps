{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "required": ["eventId", "eventType", "eventSource", "timestamp", "schema"],
  "properties": {
    "eventId": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "format": "uuid"
        }
      },
      "required": ["value"]
    },
    "eventType": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string",
          "pattern": "^[a-z]+(\\.[a-z]+)*$"
        }
      },
      "required": ["value"]
    },
    "eventSource": {
      "type": "object",
      "properties": {
        "value": {
          "type": "string"
        },
        "isClient": {
          "type": "boolean"
        }
      },
      "required": ["value", "isClient"]
    },
    "schema": {
      "type": "object",
      "properties": {
        "version": {
          "type": "string"
        },
        "name": {
          "type": "string"
        }
      },
      "required": ["version", "name"]
    },
    "timestamp": {
      "type": "string",
      "format": "date-time"
    },
    "userId": {
      "type": ["string", "null"]
    },
    "sessionId": {
      "type": ["string", "null"]
    },
    "properties": {
      "type": ["object", "null"]
    },
    "correlationId": {
      "type": ["string", "null"]
    }
  }
}

