meta {
  name: exchange
  type: http
  seq: 2
}

post {
  url: {{BASE_URI}}/exchange
  body: json
  auth: inherit
}

body:json {
  {
    "idToken": "{{oidcToken}}"
  }
}

script:post-response {
  bru.setVar("accessToken", res("accessToken"));
  bru.setVar("refreshToken", res("refreshToken"));
}

settings {
  encodeUrl: true
  timeout: 0
}
